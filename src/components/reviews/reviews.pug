      +b.trust-reviews
        +b.trust
          +b.trust-head
            +e('h3').head Мы заслужили
            +e('h3').head2 Доверие клиентов:
          +b.trust-item
            +e('img')(src='assets/images/trust_item_1.png', alt='', width='35px', height='35x')
